{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["node", "vitest"],

    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "index.ts", "prisma/**/*.ts", "tests/**/*.ts"]
}
